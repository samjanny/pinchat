{
    "manifest_version": 3,
    "name": "PinChat Integrity Verifier",
    "version": "1.0.0",
    "description": "Verifies the integrity of files served by pinchat.io against signed hashes",
    "permissions": [
        "storage",
        "alarms"
    ],
    "host_permissions": [
        "https://pinchat.io/*",
        "https://raw.githubusercontent.com/samjanny/pinchat/*"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
            "matches": ["https://pinchat.io/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon-16.png",
            "32": "icons/icon-32.png",
            "48": "icons/icon-48.png"
        }
    },
    "icons": {
        "48": "icons/icon-48.png",
        "96": "icons/icon-96.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "pinchat-verifier@pinchat.io",
            "strict_min_version": "109.0"
        }
    },
    "web_accessible_resources": [
        {
            "resources": ["warning.css"],
            "matches": ["https://pinchat.io/*"]
        }
    ]
}
